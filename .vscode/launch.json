{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build and Launch Program",
            "program": "${workspaceFolder}/src/cli.ts",
            "preLaunchTask": "npm: dev-build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/cli.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
            ],
            "console": "integratedTerminal",
        },
    ],
}